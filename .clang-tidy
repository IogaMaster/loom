Checks: '-*,modernize-*,cppcoreguidelines-*,readability-*,performance-*,portability-*,bugprone-*,clang-analyzer-*,clang-analyzer-alpha.*,concurrency-*,cert-*,misc-*'

WarningsAsErrors: ''
HeaderFilterRegex: '^(src|include|examples)/.*'
FormatStyle: file
CheckOptions:
  - key: readability-identifier-naming.VariableCase
    value: camelBack
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-magic-numbers.IgnoredNumericLiterals
    value: '0,1,-1'
